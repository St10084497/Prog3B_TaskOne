<Window x:Class="TaskOneDesign.Splash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskOneDesign"
        mc:Ignorable="d"
        Title="Splash" Height="500" Width="500"
        Background="Black">
    <Grid>
        
        <TextBlock Text="Welcome " Foreground="White" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,10" />
        <TextBlock Text="To The Dewey Decimal Game " Foreground="White" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,10" />


        <Path Name="spinnerPath" Width="50" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Path.Data>
                <!-- Define the path for the spinner (customize as needed) -->
                <PathGeometry Figures="M25,0 A25,25 0 0 0 0,25 25,25 0 0 0 -25,0 25,25 0 0 0 0,-25 25,25 0 0 0 25,0 Z" />
            </Path.Data>
            <Path.Fill>
                <SolidColorBrush Color="DodgerBlue"/>
            </Path.Fill>
        </Path>
    </Grid>
</Window>
